{
  "include": ["**/*"],
  "exclude": ["server/tests", "./node_modules", "./dist"],
  "compilerOptions": {
    "target": "es2022",
    "module": "node16",
    "rootDir": "server/src",
    "declaration": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true
  }
}
